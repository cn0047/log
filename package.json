{
  "name": "RealTimeLog",
  "version": "1.3.1",
  "private": false,
  "author": "Vladimir Kovpak",
  "license": "MIT",
  "main": " src/back/index.js",
  "engines": {
    "node": "8.5.0"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "^4.16.1",
    "pug": "^2.0.0-rc.2",
    "raven": "^2.2.1",
    "socket.io": "^2.0.4"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "coveralls": "^3.0.0",
    "css-loader": "^0.28.9",
    "eslint": "^4.11.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "jest": "^21.2.1",
    "nodemon": "^1.11.0",
    "nsp": "^3.1.0",
    "style-loader": "^0.19.1",
    "supertest": "^3.0.0",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.11.1"
  },
  "scripts": {
    "start": "node src/back/index.js",
    "dev:back": "node_modules/.bin/nodemon src/back/",
    "dev:front": "node_modules/.bin/webpack-dev-server --watch-poll",
    "lint:back": "node_modules/.bin/eslint src/back/",
    "test": "npm run utest:back",
    "utest:back": "node_modules/.bin/jest --forceExit",
    "ftest": "jmeter -n -t test/functional/jmeter/* -l /tmp/jmeter.result -j /tmp/jmeter.log -Jhost=localhost -Jport=3001",
    "nspcheck": "node_modules/.bin/nsp check",
    "build:front": "node_modules/.bin/webpack -p",
    "heroku-prebuild": "export NODE_ENV=dev && npm i && npm run build:front && rm -rf node_modules && export NODE_ENV=production",
    "heroku-postbuild": ""
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "jest": true,
      "node": true
    },
    "globals": {
      "window": true,
      "io": true,
      "hljs": true
    },
    "extends": [
      "airbnb-base"
    ]
  },
  "eslintIgnore": [
    "public/*",
    "src/front/*"
  ],
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": ".coverage"
  }
}
